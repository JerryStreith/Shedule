        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="13" Fill="#FFEE6E73" Height="66" Stroke="#FFEE6E73" VerticalAlignment="Top" Margin="0,20,8,0" Grid.Column="1" Grid.RowSpan="2" >
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0"/>
                </Rectangle.Effect>
            </Rectangle>
            <!--<Rectangle Grid.Column="1" Fill="White" Grid.RowSpan="2" Stroke="Black" Margin="15,25,15,20" RadiusY="1" RadiusX="1">
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>-->
            <TextBlock TextWrapping="Wrap" Text="1пара" Foreground="#FFA03006" FontSize="22" FontFamily="Arial Black" Grid.Column="1" Grid.Row="0" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="2пара" Foreground="White" FontSize="22" FontFamily="Arial Black" Grid.Column="3" Grid.Row="0" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
