        <CheckBox Content="" Grid.Column="4" HorizontalAlignment="Left" Margin="169,24,0,0" Grid.Row="1" VerticalAlignment="Top" Width="36" Height="17" Checked="CheckBox_Checked">
            <CheckBox.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"/>
            </CheckBox.Effect>
        </CheckBox>-->

        </Grid>
        <ScrollViewer  Grid.Row="3">
            <Grid Grid.Row="3">
                <Grid.Effect>
                    <DropShadowEffect Color="#FF898989"/>
                </Grid.Effect>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Row="0" Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Canvas x:Name="mondayCanvas"   Background="#FF607D8B">
                        <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Понеділок" Canvas.Top="10" Foreground="White" FontSize="30" FontFamily="Arial Black" Width="198"/>
                        <TextBox x:Name="msh1" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="49" Width="198" FontSize="14"/>
                        <TextBox x:Name="msh2" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="94" Width="198" FontSize="14"/>
                        <TextBox x:Name="msh3" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="139" Width="198" FontSize="14"/>
                        <TextBox x:Name="msh4" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="184" Width="198" FontSize="14"/>
                        <TextBox x:Name="msh5" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="229" Width="198" FontSize="14"/>

                    </Canvas>
                              
