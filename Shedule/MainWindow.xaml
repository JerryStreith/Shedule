            <TextBlock TextWrapping="Wrap" Text="7пара" Foreground="White" FontSize="22" FontFamily="Arial Black" Grid.Column="13" Grid.Row="0" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

            <TextBlock Text="8.45-10.05" Foreground="#FFA03006" FontSize="14" FontFamily="Arial Black" Grid.Column="1" Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="100" MinHeight="21" MaxWidth="150" MaxHeight="50" TextAlignment="Center"/>
