            <Rectangle Fill="White" Stroke="White" Grid.Column="12" Grid.Row="0" Grid.RowSpan="2" Margin="6,25,6,20" MinWidth="18" MinHeight="55" MaxWidth="18" MaxHeight="55"/>


        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <TextBlock TextWrapping="Wrap" Text="Кафедра:" FontFamily="Georgia" FontSize="20" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>
            <ComboBox x:Name="DepartmentComboBox" Grid.Row="0" VerticalAlignment="Center" FontSize="22" Height="35"  Grid.Column="4" SelectionChanged="DepartmentComboBox_SelectionChanged" MinWidth="150" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5,15,5,0">
                <ComboBox.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"/>
                </ComboBox.Effect>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" Text="Факультет:" FontFamily="Georgia" FontSize="20" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>
            <ComboBox x:Name="facultyComboBox" Grid.Row="0" VerticalAlignment="Center" FontSize="22" Height="35" Grid.Column="2" SelectionChanged="facultyComboBox_SelectionChanged" MinWidth="150" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5,15,5,0">
                <ComboBox.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"/>
                </ComboBox.Effect>
            </ComboBox>


            <TextBlock TextWrapping="Wrap" Text="Група:" FontFamily="Georgia" FontSize="20" Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0"/>
            <ComboBox x:Name="groupComboBox" Grid.Column="6" Grid.Row="0" VerticalAlignment="Center" FontSize="22" Height="35" SelectionChanged="groupComboBox_SelectionChanged" MinWidth="150" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5,15,5,0">
                <ComboBox.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"/>
                </ComboBox.Effect>
            </ComboBox>

