            <TextBlock TextWrapping="Wrap" Text="11.45-13.05" Foreground="White" FontSize="14" FontFamily="Arial Black" Grid.Column="5" Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="120" MinHeight="21" MaxWidth="150" MaxHeight="50" TextAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="13.35-14.55" Foreground="White" FontSize="14" FontFamily="Arial Black" Grid.Column="7" Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="120" MinHeight="21" MaxWidth="150" MaxHeight="50" TextAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="15.05-16.25" Foreground="White" FontSize="14" FontFamily="Arial Black" Grid.Column="9" Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="120" MinHeight="21" MaxWidth="150" MaxHeight="50" TextAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" Text="16.35-17.55" Foreground="White" FontSize="14" FontFamily="Arial Black" Grid.Column="11" Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="120" MinHeight="21" MaxWidth="150" MaxHeight="50" TextAlignment="Center"/>
