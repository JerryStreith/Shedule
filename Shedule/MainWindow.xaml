                <ScrollViewer Grid.Row="0" Grid.Column="3" Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Canvas x:Name="wednesdayCanvas" Background="#FF607D8B">
                        <TextBlock Canvas.Left="45" TextWrapping="Wrap" Text="Середа" Canvas.Top="10" Foreground="White" FontSize="30" FontFamily="Arial Black"/>
                        <TextBox x:Name="wsh1" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="49" Width="198" FontSize="14"/>
                        <TextBox x:Name="wsh2" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="94" Width="198" FontSize="14"/>
                        <TextBox x:Name="wsh3" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="139" Width="198" FontSize="14"/>
                        <TextBox x:Name="wsh4" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="184" Width="198" FontSize="14"/>
                        <TextBox x:Name="wsh5" Visibility="Collapsed" IsReadOnly="True" Height="40" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="229" Width="198" FontSize="14"/>
                    </Canvas>
                </ScrollViewer>

